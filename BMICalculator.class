import java.awt.*;
import javax.swing.*;

public class BMICalculator {
	private JFrame frame;
	private JTextField weightInput,heightInput;
	private JLabel bmilabel,range;

	public BMICalculator() {
		frame = new JFrame("LETS FIND YOUR BMI ");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(1000,500);
		frame.setLayout(new FlowLayout());
		JLabel weightLabel = new JLabel("Weight in KG");
		weightInput = new JTextField(10);
		JLabel heightLabel = new JLabel("Height in CM");
		heightInput = new JTextField(10);
		JButton calculateButton = new JButton("Calculate");
		bmilabel = new JLabel("");
		range = new JLabel("");
		calculateButton.addActionListener(e -> calculateBMI());
		
		frame.getContentPane().setBackground(Color.CYAN); 
		
		frame.add(weightLabel);
		frame.add(weightInput);
		frame.add(heightLabel);
		frame.add(heightInput);
		frame.add(calculateButton);
		frame.add(bmilabel);
		
		frame.add(range);
		frame.setVisible(true);
		
	
		
	}


	private void calculateBMI() {
		try {
			double weight = Double.parseDouble(weightInput.getText());
			double height = Double.parseDouble(heightInput.getText())/100;
			if ((weight >= 1)&& (height >= 1)) {
				double bmiResult = weight/(height * height);
				bmilabel.setText("BMI is " + bmiResult);
				identifyRange(bmiResult);
			}else
			{
				range.setText(("Please provide valid data"));
			}
		}catch(Exception e) {
			range.setText(("Error!!!"));
		}
	}
	
	private void identifyRange(double bmi) {
	
		
		if (bmi < 18.5) {
			range.setText("UNDERWEIGHT !!!");
		}else if ((bmi >= 18.5) && (bmi < 24.9)){
			range.setText("HEALTHY WEIGHT !!!");
		}else if ((bmi >= 24.9) && (bmi <= 29.9)) {
			range.setText("OVER WEIGHT !!!");
		}else if(bmi > 30.0) {
			range.setText("OBESE !!!");
		}

	}


	public static void main (String[] args) {
		 new BMICalculator();
	}



}
